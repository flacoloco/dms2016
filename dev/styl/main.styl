@import "mixins"
$lightblue = #e3e9f3
$mediumblue = #5f82c4
$darkblue = #4c629e

centerXY()
	top 50%
	left 50%
	-webkit-transform translateX(-50%) translateY(-50%)
	transform translateX(-50%) translateY(-50%)

divsize(w)
	width (w)px
	height (w/16)*9px

html
	font-size 13px
	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
	-moz-box-sizing border-box
	box-sizing border-box
	height 100%
	margin 0
	padding 0
	font-family open_sansregular
	font-size 20px


*, *:before, *:after
	box-sizing inherit


body
	margin 0
	padding 0
	remtext(1.5,2)
	color #fff
	height 100%
	background url("../static/img/back_trama.png")

h1, h2, h3, h4, h5, h6
	font-family permanent_markerregular
h2
	remtext(1.5,2)
	margin 0
p
	remtext(1.2,1.7)
.container
	max-width 1800px
	margin 0 auto
	position relative
	background-color: #999

.desktop
	display none

.tablet
	display none

.mobile
	display block


.box
	padding 30px
	background-repeat no-repeat
	background-size cover
	background-position: center center


	&.intro
		color #333
	&.escola
		border-top 0px solid white
		border-right 0px solid white
		background-color $mediumblue
	&.profes
		border-top 0px solid white
		border-right 0px solid white
		background-color $lightblue
		color $darkblue
	&.nens
		border-top 0px solid white
		background-color $darkblue

/* pure CSS */

.pure-img
	width 100%
	display table
.pure-g
	letter-spacing inherit

section
	min-height 30%
	&.intro
		height 100%
	&.menu
		position absolute
		bottom 0
	&.profes
		position relative
		cursor pointer
		.play
			position absolute
			centerXY()

	&.nosaltres
		border 0px solid $lightblue
		.thumb
			overflow hidden
			border 0px solid $lightblue
			cursor pointer
			position relative
			.picture
				position absolute
				top 0
				left 0
				width 100%
				height 100%
				background-size 100%
				background-repeat no-repeat
				background-position center center
				transition all 2s ease
				-webkit-transition all 2s ease
				-moz-transition all 2s ease
				.who
					position absolute
					centerXY()
					opacity 0
				&:hover
					border 0px solid $darkblue
					transform scale(1.3)
					.who
						opacity 1
.swiper-slide
	text-align: center
	img
		width 100%

#video
	display none
	opacity 0
	position fixed
	background-color rgba(0,0,0,.9)
	top 0
	left 0
	bottom 0
	right 0
	z-index 100
	transition opacity 1s
	&.visible
		opacity 1
	.close
		position absolute
		top 10px
		right 10px
		cursor pointer
	video
		width 90%
		max-height 90%
		position absolute
		centerXY()
@media only screen and (min-width:768px)
	html
		font-size 14px

@media only screen and (min-width:1400px)
	html
		font-size 15px


@media only screen and (min-width:1680px)
	html
		font-size 16px



@media only screen and (min-width:800px) and (max-height:650px)
	section
		height 50%
		&.intro
			height 50%
